<odoo>
    <data noupdate="1">
        <!-- Create a server action to redirect to our landing page -->
        <record id="landing_page_server_action" model="ir.actions.server">
            <field name="name">Properties Landing Page Home</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                    'type': 'ir.actions.act_url',
                    'url': '/properties_landing_page',
                    'target': 'self',
                }
            </field>
        </record>
        
        <!-- Set this as the default home action -->
        <record id="set_default_home_action" model="ir.config_parameter">
            <field name="key">web.default_home_action</field>
            <field name="value">properties_landing_page.landing_page_server_action</field>
        </record>
    </data>
</odoo>
